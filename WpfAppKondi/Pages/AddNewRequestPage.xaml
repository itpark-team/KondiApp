<Page x:Class="WpfAppKondi.Pages.AddNewRequestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppKondi.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddNewRequestPage">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock>Тип оборудования: </TextBlock>
                <ComboBox Width="350" Name="ComboboxClimateTechType"></ComboBox>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock>Модель оборудования:</TextBlock>
                <TextBox Width="350" Name="TextBoxClimateTechModel"></TextBox>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock>Описание проблемы</TextBlock>
                <TextBox Width="350" Name="TextBoxProblemDescryption"></TextBox>
            </StackPanel>

            <Button Width="100" Name="ButtonAddRequest" Click="ButtonAddRequest_Click">Создать заявку</Button>
        </StackPanel>
    </Grid>
</Page>
