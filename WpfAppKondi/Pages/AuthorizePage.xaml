<Page x:Class="WpfAppKondi.Pages.AuthorizePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppKondi.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <StackPanel>
            <TextBlock TextAlignment="Center">Логин</TextBlock>
            <TextBox Width="150" Name="TextBoxLogin"></TextBox>
            <TextBlock TextAlignment="Center">Пароль</TextBlock>
            <TextBox Width="150" Name="TextBoxPassword" Margin="0,0,0,20"></TextBox>
            <Button Name="ButtonLogin" Width="100" Click="ButtonLogin_Click">Авторизация</Button>
        </StackPanel>
    </Grid>
</Page>
